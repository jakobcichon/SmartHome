<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartHome.MobileApp.Prism.Views.Home.DevicesListView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <VerticalStackLayout x:Name="NoDevicesLayout" 
                            VerticalOptions="Center"
                            IsVisible="{Binding IsAnyDeviceAvailable, 
                                        Converter={StaticResource Key=BooleanNegationConverter}}">
            <Button ImageSource="add_icon.png" 
                    StyleClass="EnlargedOnPointerOver"/>
            <Label Text="No devices found"/>
        </VerticalStackLayout>

        <VerticalStackLayout x:Name="DevicesLayout" 
                            IsVisible="{Binding IsAnyDeviceAvailable}"
                            BindableLayout.ItemsSource="{Binding Devices}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" 
                          Margin="8" 
                          StyleClass="Enlarged, Shadow">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" 
                      Grid.Column="1" 
                      FontSize="Medium"
                      Text="{Binding Name}"
                      HorizontalOptions="Center"/>

                        <VerticalStackLayout Grid.Row="1" 
                                    Grid.ColumnSpan="2">
                            <Label Text="{Binding Type}"
                           HorizontalOptions="Start"/>
                            <Label Text="{Binding Status}"
                           HorizontalOptions="Start"/>
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>

    </Grid>

</ContentView>
