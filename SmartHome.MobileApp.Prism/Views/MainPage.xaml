<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             x:Class="SmartHome.MobileApp.Prism.Views.MainPage"
             xmlns:views="clr-namespace:SmartHome.MobileApp.Prism.Views"
             StyleClass="mainThemeBackground">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" x:Name="HeaderRow"/>
            <RowDefinition Height="*" x:Name="ContentRow"/>
            <RowDefinition Height="auto" x:Name="Divider"/>
            <RowDefinition Height="70" x:Name="MenuRow"/>
        </Grid.RowDefinitions>

        <HorizontalStackLayout HorizontalOptions="Center">
        </HorizontalStackLayout>

        <Grid Grid.Row="1" HorizontalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ContentView prism:RegionManager.RegionName="{Binding MainPageRegionName}"/>
        </Grid>

        <Rectangle Grid.Row="2"
                   StyleClass="ShadowElement"
                  Opacity="0.2" 
                  HeightRequest="5"
                  Fill="Black"/>

        <HorizontalStackLayout Grid.Row="3"
                               HorizontalOptions="Center"
                               Padding="5"
                               Spacing="5">
            <Button ImageSource="home.png" 
                    StyleClass="defaultButton"
                    Command="{Binding NavigateToHomeCommand}"
                    Margin="5"/>
            <Button ImageSource="menu.png"
                    StyleClass="defaultButton2"
                    Command="{Binding NavigateToMenuCommand}"
                    Margin="5"
  >
                
            </Button>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>